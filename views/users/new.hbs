<div class="skaterForm">

    <h2>Skater Info</h2>
    <div>
        <form action="/users" method="POST">
            <div class="form-input">
                <label for="name">Name</label>
                <input type="text" name="name" required/>
            </div>

            <div class="form-input">
                <label for="nickName">NickName</label>
                <input type="text" name="nickName" />
            </div>

            <div class="form-input">
                <label for="stance">Stance</label>
                <input type="text" name="stance" required/>
            </div>

            <div class="form-input">
                <label for="photoUrl">Photo Url</label>
                <input type="text" name="photoUrl" />
            </div>

            <div class="button-container flex-end">
                <input class="btn btn-primary" type="submit" value="Create Skater">
                <a href="/users" class="btn btn-warning">Cancel</a>
            </div>
        </form>
    </div>
</div>