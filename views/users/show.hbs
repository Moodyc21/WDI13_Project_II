<div class='navLinks'>
    <a href="/users"> Home </a> / Skater
</div>
<h1>{{user.name}} aka {{user.nickName}}</h1>
<div class="container">
    <div>
        {{#if user.photoUrl}}
        <img src="{{user.photoUrl}}" alt="{{user.name}}'s profile photo"> {{else}}
        <img src="https://i.imgur.com/3ggmLxE.jpg" alt="{{user.name}}'s profile photo"> {{/if}}
    </div>
    <div class="skaterInfo">
        <div class="button-container">
            <div class="btn btn-primary">
                <a href="/users/{{user._id}}/edit">Edit Skater</a>
            </div>
            <div class="btn btn-danger">
                <a href="/users/{{user._id}}/delete">Delete ME</a>
            </div>
        </div>
        <div>Name:
            <strong>{{user.name}}</strong>
        </div>
        <div>NickName:
            <strong>{{user.nickName}}</strong>
        </div>
        <div class="visitSkateShop">
            <a href="/users/{{user._id}}/skateShop">Go to SkateShop</a>
        </div>
    </div>
</div>