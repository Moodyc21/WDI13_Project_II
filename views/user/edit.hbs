<div class="stepper">
  <a href="/users">Build</a> /
  <a href="/users/{{user._id}}">My Complete </a>
</div>

<div class="editUser">

  <h2>Edit User Profile</h2>
  <div>
    <form action="/users/{{user._id}}?_method=PUT" method="POST">
      <div class="form-input">
        <label for="name">Name:</label>
        <input type="text" name="name" value="{{user.name}}" required/>
      </div>

      <div class="form-input">
        <label for="stance">Stance</label>
        <input type="text" name="stance" value="{{user.stance}}" />
      </div>

      <div class="button-container flex-end">
        <input class="button primary" type="submit" value="Update">
        <a href="/users/{{user._id}}" class="button warning">Cancel</a>
      </div>
    </form>
  </div>
</div>